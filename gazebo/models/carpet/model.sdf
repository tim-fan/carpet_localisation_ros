<?xml version="1.0"?>
<sdf version="1.4">
    <model name="carpet">
        <static>true</static>
        <link name="link">
            <!-- offset s.t. bottom left corner is origin -->
            <pose>10 10 0 0 0 0</pose>
            <collision name="collision">
                <geometry>
                    <plane>
                        <normal>0 0 1</normal>
                        <size>20 20</size>
                    </plane>
                </geometry>
                <surface>
                    <friction>
                        <ode>
                            <mu>100</mu>
                            <mu2>50</mu2>
                        </ode>
                    </friction>
                </surface>
            </collision>
            <visual name="visual">
                <cast_shadows>false</cast_shadows>
                <geometry>
                    <plane>
                        <normal>0 0 1</normal>
                        <size>20 20</size>
                    </plane>
                </geometry>
                <material>
                    <script>
                        <uri>model://carpet/materials/scripts</uri>
                        <uri>model://carpet/materials/textures</uri>
                        <name>Carpet/Image</name>
                    </script>
                </material>
            </visual>
        </link>
    </model>
</sdf>